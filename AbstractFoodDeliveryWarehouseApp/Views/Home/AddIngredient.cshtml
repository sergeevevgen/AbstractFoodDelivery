@{
    ViewData["Title"] = "AddIngredient";
}

<div class="text-center">
    <h2 class="display-4">Пополнение склада</h2>
</div>
<form method="post">
    <div class="row">
        <div class="col-4">Склад:</div>
        <div class="col-8">
            <select id="warehouse" name="warehouse" class="form-control" asp-items="@(new SelectList(@ViewBag.Warehouses,"Id", "WareHouseName"))"></select>
        </div>
    </div>
    <div class="row">
        <div class="col-4">Ингредиент:</div>
        <div class="col-8">
            <select id="ingredient" name="ingredient" class="form-control" asp-items="@(new SelectList(@ViewBag.Ingredients,"Id", "IngredientName"))"></select>
        </div>
    </div>
    <div class="row">
        <div class="col-4">Количество:</div>
        <div class="col-8"><input type="text" name="count" id="count" /></div>
    </div>
    <div class="row">
        <div class="col-8"></div>
        <div class="col-4"><input type="submit" value="Пополнить" class="btn btn-primary" /></div>
    </div>
</form>
